<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg_main">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:paddingHorizontal="24dp"
        android:elevation="2dp">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="FIR PORTAL"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@color/black" />
        <ImageButton
            android:id="@+id/btnArchive"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="?selectableItemBackgroundBorderless"
            android:src="@android:drawable/ic_menu_agenda"
            app:tint="@color/black"/>
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Official Records"
                android:textSize="26sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginBottom="8dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Access official FIR documents instantly. All successful searches are permanently archived."
                android:textColor="@color/text_muted"
                android:textSize="15sp"
                android:layout_marginBottom="32dp"/>
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="16dp"
                app:strokeWidth="1dp"
                app:strokeColor="@color/border">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Police Station"
                        android:textStyle="bold"
                        android:textSize="12sp"
                        android:textColor="@color/text_muted"
                        android:layout_marginBottom="8dp"/>
                    <Spinner
                        android:id="@+id/spinnerStation"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@drawable/input_bg"
                        android:layout_marginBottom="20dp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="24dp">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginEnd="12dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="FIR Number"
                                android:textStyle="bold"
                                android:textSize="12sp"
                                android:textColor="@color/text_muted"
                                android:layout_marginBottom="8dp"/>
                            <EditText
                                android:id="@+id/inputFir"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:background="@drawable/input_bg"
                                android:paddingHorizontal="16dp"
                                android:inputType="number"
                                android:textColor="@color/black"
                                android:textSize="14sp"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Year"
                                android:textStyle="bold"
                                android:textSize="12sp"
                                android:textColor="@color/text_muted"
                                android:layout_marginBottom="8dp"/>
                            <Spinner
                                android:id="@+id/spinnerYear"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:background="@drawable/input_bg"/>
                        </LinearLayout>
                    </LinearLayout>
                    <FrameLayout
                        android:id="@+id/btnDownload"
                        android:layout_width="match_parent"
                        android:layout_height="54dp"
                        android:background="@drawable/btn_black"
                        android:clickable="true"
                        android:focusable="true">
                        <TextView
                            android:id="@+id/btnText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="Get Document"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:textSize="15sp"/>
                        <ProgressBar
                            android:id="@+id/progressBar"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_gravity="center"
                            android:indeterminateTint="@color/white"
                            android:visibility="gone"/>
                    </FrameLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
